{
	"version": "2.0.0",
	"tasks": [
	  {
		"type": "shell",
		"label": "g++ build active file",
		"command": "/usr/bin/gcc",
		// "args": ["-g", "-std=c99", "-pedantic-errors", "-Wall", "-Wextra", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}"],
		"args": ["-g", "-std=c99", "-pedantic-errors", "-Wall", "-Wextra", "${fileDirname}/*.c", "-o", "${fileDirname}/${fileBasenameNoExtension}"],
		"options": {
		  "cwd": "/usr/bin"
		},
		"problemMatcher": ["$gcc"],
		"group": {
		  "kind": "build",
		  "isDefault": true
		}
	  }
	]
  }